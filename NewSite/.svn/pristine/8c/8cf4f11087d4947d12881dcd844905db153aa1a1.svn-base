
	/* Controls Bar
	----------------------------*/
	#controls-wrapper { margin:0 auto; height:42px; width:100%; bottom:0px; left:0; /*background:url(../../Images/HomeGallery/nav-bg.png) repeat-x;*/ position:fixed; }
		#controls { overflow:hidden; height:100%; position:relative; text-align:left; }
			#slidecounter { float:left; color:#999; font:14px "Helvetica Neue", Helvetica, Arial, sans-serif; text-shadow:#000 0 -1px 0; margin:0px 10px 0 15px; line-height:42px; }
			#slidecaption { overflow:hidden; float:left; color:#FFF; font:400 14px "Helvetica Neue", Helvetica, Arial, sans-serif; text-shadow:#000 1px 1px 2px; margin:0 20px 0 0; line-height:42px; }
			
			#navigation { float:right; margin:0px 20px 0 0; }
				#play-button{ float:left; margin-top:1px;border-right:1px solid #333; background:url('../../Images/HomeGallery/bg-hover.png') repeat-x 0 44px; }
					#play-button:hover{ background-position:0 1px; cursor:pointer; }
				
			     
			         #nextslide{pointer-events:all; position:absolute; height:43px; width:43px; top:237px; margin-right: 20px; opacity:0.6; }
				#prevslide{pointer-events:all; position:absolute; height:43px; width:43px; top:237px; margin-left: -60px; opacity:0.6; }
					#prevslide{ left:167px; background:url('../../Images/HomeGallery/back.png'); }
					#nextslide{ right:10px; background:url('../../Images/HomeGallery/forward.png'); }
						/* #nextslide:active{ margin-top:-40%; }
						#prevslide:active{ margin-top:-50%; }*/
						#prevslide:hover, #nextslide:hover{ cursor:pointer; }
				
				ul#slide-list{ padding:0px 0; float:left; position:absolute; left:50%; }
					ul#slide-list li{ list-style:none; width:12px; height:12px; float:left; margin:0 5px 0 0; }
						ul#slide-list li.current-slide a, ul#slide-list li.current-slide a:hover{ background-position:0 0px; }
						ul#slide-list li a{ display:block; width:12px; height:12px; background:url('../../Images/HomeGallery/nav-dot.png') no-repeat 0 -24px; }
							ul#slide-list li a:hover{ background-position:0 -12px; cursor:pointer; }
				
				#tray-button{ float:right; margin-top:1px; border-left:1px solid #333; background:url('../../Images/HomeGallery/bg-hover.png') repeat-x 0 44px; }
					#tray-button:hover{ background-position:0 1px; cursor:pointer; }
		
	
	/* Progress Bar
	----------------------------*/					
	#progress-back{ z-index:5; position:fixed; bottom:42px; left:0; height:8px; width:100%; background:url('../../Images/HomeGallery/progress-back.png') repeat-x; }
		#progress-bar{ position:relative; height:8px; width:100%; background:url('../../Images/HomeGallery/progress-bar.png') repeat-x; }
	
		